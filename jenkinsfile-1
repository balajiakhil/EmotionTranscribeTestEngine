pipeline {
  agent { label 'any' }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'sonar-server') {
          sh """
               ${scannerHome}/bin/sonar-scanner \
               -Dsonar.projectKey=squ_50fdda87da0f8812e8dd7e94748a4909161798dc \
               -Dsonar.sources=. \
            """
        }
      }
    }
  }
}